#search-page
  position: fixed
  width 100%
  height 100%
  padding-bottom 90px
  .search-header
    position: relative
    width: 100%
    flex-row()
    text-align center
    padding-top: 5px
    padding-bottom: 5px
    background-color: $fill-header
    .search-input
      flex: 1 0 90%
      height 35px
      font-size: 14px
      background-color: $fill-header
      color: $color-text-placeholder
    .back
      flex: 1 0 10%
      i
        display inline-block
        width 20px
        height 20px
        right 15px
        bottom 0
        cursor pointer
        background url(../../common/images/back.svg) no-repeat
        background-size: contain
  .hot
    flex 1 0 80%
    padding 10px
    color #6c706f
    font-size 14px
    .keywords
      display flex
      flex-wrap wrap
      padding-top 10px
      list-style none
      font-size $font-size-display-md
      color $fill-keywords
      .keyword
        text-align center
        padding 3px 10px
        margin-right 10px
        margin-bottom 10px
        border-radius 20px
        cursor pointer
        border 1px solid #ccd0cf
        background-color: $fill-base
      .keyword:hover
        color $color-text-base-inverse
        background-color #ccd0cf
  .search-list
    width:100%
    height: 100%
    .vux-swiper,
    .vux-slider,
    .tab-swiper
      height 100%
    .tab-swiper
      background-color #fff
    .search-area
      background-color: #fff;
      width: 100%;
      height: 100%;
      overflow: auto;
      ul
        list-style: none
// 搜索输入框默认提示字体颜色
::-webkit-input-placeholder { /* WebKit browsers */
      color: $color-text-placeholder;
      }
      :-moz-placeholder { /* Mozilla Firefox 4 to 18 */
      color: $color-text-placeholder;
      }
      ::-moz-placeholder { /* Mozilla Firefox 19+ */
      color: $color-text-placeholder;
      }
      :-ms-input-placeholder { /* Internet Explorer 10+ */
      color: $color-text-placeholder;
      }
