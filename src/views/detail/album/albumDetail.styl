.album-detail
  .fixed-close
    position fixed
    width 100%
    height 46px
    z-index 30
    .close-img
      width 30px
      height 30px
      background url(./close.png) no-repeat center center
      background-size 70%
  .album-wrapper
    width 100%
    padding-left 10%
    padding-right 10%
    height 100%
    position absolute
    overflow-y auto
    z-index: 12
    display flex
    flex-direction column
    align-items center
    color #fff
    padding-top 90px
    img
      width 60%
    h1
      font-size 18px
      font-weight 500
    .subType
      align-self flex-start
      margin-bottom 20px
      color #fff


