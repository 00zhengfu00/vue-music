.playLists-area
  background-color #fff
  width 100%
  height 100%
  overflow-y auto
  .vux-button-group
    width 50%
    margin 10px auto
    > a.vux-button-group-current
      background #b72712
    > a.vux-button-tab-item-first
        &:after
          border 1px solid #b72712
          color #b72712
    > a.vux-button-tab-item-last
        &:after
          border-right 1px solid #b72712
          border-top 1px solid #b72712
          border-bottom 1px solid #b72712
