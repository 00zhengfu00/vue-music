.recommend-area
  width 100%
  height 100%
  overflow-y auto
  .title
    padding-top 15px
    font-size 14px
    color #282c2b
    &:before
      content '|'
      color #ce3d3e
      font-size 20px
      padding-right 5px
    &:after
      content '>'
      color #848a88
      font-size 20px
      padding-left 5px
  ul
    display flex
    flex-direction row
    justify-content space-between
    flex-flow row wrap
    list-style none
  .recommend-playLists-area
    .playLists-area
      li
        padding-top 10px
        flex 0 0 33%
  .recommend-activitys-area
    .activitys-area
      li
        padding-top 10px
        flex 0 0 49.5%
        &:last-child
          flex 0 0 100%
  .recommend-mv-area
    .MV-area
      li
        padding-top 10px
        flex 0 0 49.5%


