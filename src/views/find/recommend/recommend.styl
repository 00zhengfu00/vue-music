.recommend-area
  background-color #fff
  width 100%
  height 100%
  overflow auto
  .title
    font-size 14px
    color #282c2b
    &:before
      content '|'
      color #ce3d3e
      font-size 20px
      padding-right 5px
    &:after
      content '>'
      color #848a88
      font-size 20px
      padding-left 5px
  ul
    display flex
    flex-direction row
    justify-content space-between
    flex-flow row wrap
    list-style none
    li
      flex 33%
  .recommend-playLists-area
    .playLists-area
      display block



