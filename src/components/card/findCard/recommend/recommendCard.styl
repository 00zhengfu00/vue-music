.play-lists-detail
  background-color #fff
  width 100%
  height 100%
  overflow auto
  ul
    list-style none
    li
      padding-left 5px
      .playlist-card
        display flex
        flex-direction row
        justify-content flex-start
        align-items center
        img.coverImage
          width 0
          flex 2
          padding 5px 0
        .playList-info
          flex 9
          margin-left 5px
          border-bottom 1px solid #e1e5e4
          align-items flex-start
          align-self stretch
          justify-content center
          display flex
          flex-direction column
          .playList-info-other
            display flex
            justify-content flex-start
            font-size 12px
            color #6c6e6d
            span
              padding-right 5px
