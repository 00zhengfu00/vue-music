.play-lists
  background-color #fff
  width 100%
  height 100%
  overflow auto
  ul
    list-style none
    li
      padding-left 5px
      .playlist-card
        display flex
        flex-direction row
        justify-content flex-start
        align-items center
        img.coverImage
          width 0
          height auto
          flex 2
        .playList-info
          flex 9
          padding-top 5%
          padding-bottom 5%
          margin-left 10px
          border-bottom 1px solid #e1e5e4
          .playList-info-other
            span
              padding-right 5px
