.singer-list
  background-color #fff
  width 100%
  height 100%
  overflow auto
  ul
    list-style none
    li
      padding-left 5px
      .singer-card
        display flex
        flex-direction row
        justify-content flex-start
        align-items center
        img.avatar
          width 0
          flex 2
          padding 5px 0
        .singer-name
          flex 9
          margin-left 5px
          border-bottom 1px solid #e1e5e4
          align-items center
          align-self stretch
          display flex
          flex-direction row
          justify-content: flex-start
          .trans
            font-size 12px
            color #6c6e6d

