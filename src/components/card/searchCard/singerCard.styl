.singer-list
  background-color #fff
  width 100%
  height 100%
  overflow auto
  ul
    list-style none
    li
      padding-left 5px
      .singer-card
        display flex
        flex-direction row
        justify-content flex-start
        align-items center
        img.avatar
          width 0
          height auto
          flex 2
        .singer-name
          flex 9
          padding-top 6%
          padding-bottom 6%
          margin-left 5px
          border-bottom 1px solid #e1e5e4